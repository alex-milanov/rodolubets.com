{
  "name": "rodolubets.com",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "node bin/move-assets.js",
    "build": "npm run build:lib && npm run build:js && npm run build:sass",
    "build:lib": "npm i iblokz",
    "build:js": "browserify src/js/index.js -o dist/js/app.js -t [ babelify --presets [ es2015 ] ]",
    "build:sass": "node-sass --include-path=$(node bin/sass-paths.js) src/sass/style.sass dist/css/style.css",
    "watch": "npm run watch:lib & npm run watch:js & npm run watch:sass & npm run livereload",
    "watch:lib": "nodemon --watch 'lib' --exec 'npm run build:lib && npm run build:js'",
    "watch:js": "nodemon --watch 'src/js' --exec 'npm run build:js'",
    "watch:sass": "npm run build:sass -- --watch src/sass/**/*",
    "livereload": "livereload dist",
    "start": "npm run build && nodemon server & npm run watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "bourbon": "^4.2.7",
    "bourbon-neat": "^1.8.0",
    "express": "^4.14.0",
    "font-awesome": "^4.6.3",
    "marked": "^0.3.6",
    "method-override": "^2.3.6",
    "moment": "^2.15.1",
    "mongoose": "^4.6.3",
    "rx": "^4.1.0",
    "snabbdom": "^0.5.3",
    "superagent": "^2.3.0",
    "iblokz": "file:lib/iblokz"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "eslint": "^3.7.1",
    "eslint-config-google": "^0.6.0",
    "fs-extra": "^0.30.0",
    "livereload": "^0.5.0",
    "node-sass": "^3.10.1",
    "nodemon": "^1.11.0"
  }
}
